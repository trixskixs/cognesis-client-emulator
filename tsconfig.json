{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "CommonJS",
                            "moduleResolution":  "Node",
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "skipLibCheck":  true,
                            "declaration":  true,
                            "sourceMap":  true,
                            "resolveJsonModule":  true
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "dist",
                    "node_modules"
                ]
}
